<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crear_cuenta"
    android:background="@drawable/fondonube">

    <ImageView
        android:id="@+id/returnn2"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/patras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="440dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnn2"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@drawable/background_rounded">

        <ImageView
            android:id="@+id/imagenArriba"
            android:layout_width="167dp"
            android:layout_height="87dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/salchichonio"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/crearUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/crearPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Contraseña"
            android:layout_gravity="center"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/crearUser"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/crearUser"
            app:layout_constraintTop_toBottomOf="@+id/crearUser" />

        <EditText
            android:id="@+id/confirmarCreacionP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Confirma la contraseña"
            android:layout_gravity="center"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/crearPassword"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/crearPassword"
            app:layout_constraintTop_toBottomOf="@+id/crearPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreal"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:background="@drawable/gradient"
            android:layout_gravity="center"
            android:text="Crear cuenta"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/confirmarCreacionP"
            app:layout_constraintStart_toStartOf="@+id/confirmarCreacionP"
            app:layout_constraintTop_toBottomOf="@+id/confirmarCreacionP" />

        <LinearLayout
            android:id="@+id/yatienes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tienes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tiene una?"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/volverAIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Inicia sesion."
            android:textColor="#03A9F4"
            android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>